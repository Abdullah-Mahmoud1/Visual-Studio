

@page
@model IndexModel
@{
    ViewData["Title"] = "Abdullah-Mahmoud's Music Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        /* CSS Customizations */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #121212;
            color: #f0f0f0;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-top: 40px;
            padding: 20px;
            border-bottom: 3px solid #1DB954;
            position: relative;
            overflow: hidden;
            width: 100%;
            max-width: 800px;
            text-align: center;
            color: #1DB954;
        }

        /* Loop Animation for header */
        @@keyframes colorLoop {
            0% { color: #1DB954; }
            25% { color: #FFD700; }
            50% { color: #FF4500; }
            75% { color: #00CED1; }
            100% { color: #1DB954; }
        }

        main {
            margin: 40px 0;
            width: 100%;
            max-width: 800px;
        }

        iframe {
            border-radius: 10px;
            width: 100%;
            height: 450px;
            border: none;
        }
    </style>
</head>
<body>
    <h1 id="animated-header">
        Abdullah-Mahmoud's Favorite Music Video
    </h1>

    <main>
        <!-- Embedded YouTube Music Video -->
        <iframe 
            src="https://www.youtube.com/embed/3JWTaaS7LdU?autoplay=0&loop=1&playlist=3JWTaaS7LdU" 
            title="YouTube video player" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
        </iframe>
    </main>

    <script>
        // JavaScript looped animation on header text color

        const header = document.getElementById('animated-header');
        const colors = ['#1DB954', '#FFD700', '#FF4500', '#00CED1'];
        let colorIndex = 0;

        function loopColors() {
            colorIndex = (colorIndex + 1) % colors.length;
            header.style.color = colors[colorIndex];
        }

        // Change color every 1.5 seconds infinitely
        setInterval(loopColors, 1500);
    </script>
</body>

